<form method="post" action="{{ path('game_event_delete', {'id': game_event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game_event.id) }}">
    <button class="btn">Delete</button>
</form>
