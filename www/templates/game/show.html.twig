{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h2>Game details {{ game.gameDate|date('Y-m-d H:i') }}</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
            <th>Player</th>
            <th>Event</th>
            <th>Value</th>
        </tr>
        </thead>
        <tbody>
            {% for statistic in game.statistics %}
            <tr>
                <td>{{ statistic.playerName }}</td>
                <td>{{ statistic.eventName }}</td>
                <td>{{ statistic.score}}</td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="4">No records found, if you want to create some record please click button "Create Event"</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <table class="table table-dark">
        <thead class="thead-dark">
        <tr>
            <th>Event summary : {{ game.getSummaryScore }}</th>
        </tr>
        </thead>
    </table>
    <div class="mb-2">
        <a href="#">
            <button class="btn btn-dark">Create New Event</button>
        </a>
    </div>
    {{ include('game/_delete_form.html.twig') }}
    <div class="mt-2">
        <a href="{{ path('game_index') }}">
            <button class="btn btn-primary">Back to list</button>
        </a>
    </div>
{% endblock %}
